<h1>My Tasks</h1>

<ul>
  <% @tasks.each do |task| %>
    <li><%= task.completed %> <%= link_to task.title, task_path(task) %><%= link_to "Delete",task_path(task), method: :delete, class:"fa-trash-alt", data: { confirm: "Are you sure you want to delete this task?"} %></li>
  <% end %>
</ul>

<hr>

<%= link_to "Add a new task", new_task_path %>